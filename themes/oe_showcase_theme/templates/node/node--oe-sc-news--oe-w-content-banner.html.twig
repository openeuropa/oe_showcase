{#
/**
 * @file
 * Override News content banner display to add badges.
 */
#}
{% set _badges = [] %}
{% for _item in content.field_news_type|field_value %}
  {% set _badges = _badges|merge([{
    label: _item,
    rounded_pill: true,
  }]) %}
{% endfor %}
<div{{ attributes }}>
  {{ pattern('content_banner', {
    background: 'gray',
    title: label,
    content: content.oe_summary,
    image: image,
    meta: [
      content.oe_publication_date|field_value,
    ],
    badges: _badges
  }) }}
</div>
