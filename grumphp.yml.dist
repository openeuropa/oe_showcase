imports:
  - { resource: vendor/openeuropa/code-review/dist/drupal-conventions.yml }
parameters:
  tasks.phpcs.ignore_patterns:
    - build/
    - node_modules/
    - vendor/
  tasks.phpcs.triggered_by:
    - inc
    - install
    - module
    - php
    - theme
    - yml

grumphp:
  git_hook_variables:
    EXEC_GRUMPHP_COMMAND: 'docker-compose exec -T web'
  tasks:
    phpparser:
      ignore_patterns:
       - vendor/
       - build/
      visitors:
        declare_strict_types: ~
      triggered_by:
        - php
        - module
        - inc
        - theme
        - install
