{#
/**
 * @file
 * Search result template.
 */
#}
{% set badges = [] %}
{% if content.field_category is not empty %}
  {% set badge_attr = create_attribute({'class': ['me-2']}) %}
  {% for key,item in content.field_category %}
    {% if key|first != '#' %}
      {% set badges = badges|merge([{
        label: item['#title'],
        attributes: badge_attr
      }]) %}
    {% endif %}
  {% endfor %}
{% endif %}

{% if content.field_image[0] is defined and content.field_image[0]['#markup'] is not empty %}
  {% set image = {
    path: content.field_image[0]['#markup'],
    position: "top",
  } %}
{% endif %}

{{ pattern('card', {
  horizontal: true,
  horizontal_grid: {
    left_col_classes: "col-md-3",
    right_col_classes: "col-md-9",
    gutter: 0,
  },
  title: {
    content: label,
    classes: "mb-4",
  },
  text: {
    content: content.body,
    classes: "mb-4",
  },
  attributes: attributes.addClass(["border-0", "mb-5"]),
  image: image,
  badges: badges
}) }}
