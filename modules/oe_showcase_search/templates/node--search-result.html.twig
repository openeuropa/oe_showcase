/**
 * @file
 * Search result template.
 */
#}
{% set title = {
  tag: 'a href=' ~ url,
  content:  label,
} %}
{{ pattern('card', {
  variant: 'search',
  title: title,
  text: content.field_news_content,
  image: content.field_news_image[0],
  content: {
    '#type': 'html_tag',
    '#tag': 'span',
    '#attributes': {
      class: 'text-muted text-nowrap me-4-5',
    },
    '#value': node.getCreatedTime|bcl_timeago,
  }
}) }}
