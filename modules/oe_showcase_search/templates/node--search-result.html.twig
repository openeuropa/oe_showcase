{#
/**
 * @file
 * Search result template.
 */
#}
{% set link = pattern('link', {
  'label': label,
  'path': url,
  'attributes': create_attribute({
    'class': 'text-underline-hover',
  })
})
%}
{% set title = {
  tag: 'h5',
  content:  link,
} %}
{{ pattern('card', {
  variant: 'search',
  title: title,
  text: content.body,
  image: content.field_image[0],
  badges: content.field_category,
  content: {
    '#type': 'html_tag',
    '#tag': 'span',
    '#attributes': {
      class: 'text-muted text-nowrap me-4-5',
    },
    '#value': node.getCreatedTime|bcl_timeago,
  }
}) }}
