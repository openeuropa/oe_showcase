{#
/**
 * @file
 * Search result template.
 */
#}
{% set _title %}
  <a class="text-underline-hover" href="{{ url }}">{{ label }}</a>
{% endset %}
{{ pattern('card', {
  variant: 'search',
  title: _title,
  text: content.body,
  image: content.field_image[0],
  badges: content.field_category,
  content: {
    '#type': 'html_tag',
    '#tag': 'span',
    '#attributes': {
      class: 'text-muted text-nowrap me-4-5',
    },
    '#value': node.getCreatedTime|bcl_timeago,
  }
}) }}
