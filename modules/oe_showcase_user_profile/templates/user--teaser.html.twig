{#
/**
 * @file
 * User teaser template.
 */
#}
{% set _url = path('entity.user.canonical', {'user': user.id}) %}
{% set _title %}
  {{ user.field_first_name.value }} {{ user.field_last_name.value }}
{% endset %}
{% set _content %}
  {{ user.field_organization.value }} {{ user.field_current_position.value }}
{% endset %}
{{ pattern('card', {
  variant: 'user_teaser',
  orientation: 'horizontal',
  title: {
    url: _url,
    value: _title,
  },
  content: {
    value: _content,
  },
  image: content.field_profile_image[0],
}) }}
