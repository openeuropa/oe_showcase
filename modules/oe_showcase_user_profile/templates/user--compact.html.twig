{#
/**
 * @file
 * User teaser template.
 */
#}
{% set _title %}
  {{ user.field_first_name.value }} {{ user.field_last_name.value }}
{% endset %}
{{ pattern('card', {
  variant: 'user_compact',
  title: _title,
  meta: [
    user.field_organization.value,
    user.field_current_position.value,
  ],
  url: path('entity.user.canonical', {'user': user.id}),
  image: {
    path: content.field_profile_image[0]['#markup'],
  },
}) }}
