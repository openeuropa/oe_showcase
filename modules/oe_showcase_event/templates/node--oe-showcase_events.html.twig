{% set badges = [] %}
{% if content.field_event_image[0] is defined and content.field_event_image[0]['#markup'] is not empty %}
  {% set image = {
    path: content.field_event_image[0]['#markup'],
    position: "top",
  } %}
{% endif %}
{{ pattern('card', {
  horizontal: true,
  horizontal_grid: {
    left_col_classes: "col-md-3",
    right_col_classes: "col-md-9",
    gutter: 0,
  },
  title: {
    content: label,
    classes: "mb-4",
  },
  {#subtitle: {#}
  {#  content: content.field_news_publication_date|render|striptags,#}
  {#  classes: "mb-4",#}
  {#},#}
  text: {
    content: content.field_content|render|striptags,
    classes: "mb-4",
  },
  attributes: attributes.addClass(["border-0", "mb-5"]),
  image: image,
  content: badges|render
}) }}