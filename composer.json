{
    "name": "openeuropa/oe_showcase",
    "description": "OpenEuropa Showcase profile.",
    "type": "drupal-profile",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.3",
        "drupal/better_exposed_filters": "^5.0@beta",
        "drupal/core": "^8.9 || ^9.1",
        "drupal/easy_breadcrumb": "^2.0",
        "drupal/facets": "^1.8.0",
        "drupal/facets_form": "1.x-dev",
        "drupal/search_api": "^1.20",
        "drupal/search_api_autocomplete": "^1.5",
        "drupal/ui_patterns": "^1.2",
        "drupal/ui_patterns_settings": "^1.1",
        "npm-asset/jquery-ui-touch-punch": "^0.2.3",
        "oomphinc/composer-installers-extender": "^2.0",
        "openeuropa/oe_authentication": "^1.4",
        "openeuropa/oe_corporate_blocks": "^4.2",
        "openeuropa/oe_media": "^1.13",
        "openeuropa/oe_multilingual": "^1.8",
        "openeuropa/oe_paragraphs": "dev-OEL-542",
        "openeuropa/oe_whitelabel": "1.x-dev"
    },
    "suggest": {
        "oomphinc/composer-installers-extender": "Required to use drupal/jquery_ui_touch_punch module.",
        "npm-asset/jquery-ui-touch-punch": "Required to use drupal/jquery_ui_touch_punch module for BEF."
    },
    "require-dev": {
        "composer/installers": "~1.11",
        "drupal/cas_mock_server": "^1.3",
        "drupal/config_devel": "^1.2",
        "drupal/core-composer-scaffold": "^8.9 || ^9.1",
        "drupal/default_content": "^2.0@alpha",
        "drupal/drupal-extension": "~4.0",
        "drush/drush": "~10.3",
        "openeuropa/behat-transformation-context": "^0.1.2",
        "openeuropa/code-review": "^1.6",
        "openeuropa/composer-artifacts": "~0.1",
        "openeuropa/drupal-core-require-dev": "^8.9 || ^9.1",
        "openeuropa/task-runner-drupal-project-symlink": "^1.0",
        "phpspec/prophecy-phpunit": "^1 || ^2"
    },
    "scripts": {
        "post-install-cmd": "./vendor/bin/run drupal:site-setup",
        "post-update-cmd": "./vendor/bin/run drupal:site-setup"
    },
    "repositories": {
        "drupal":{
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "openeuropa/oe_whitelabel":{
            "type": "vcs",
            "url": "https://github.com/openeuropa/oe_whitelabel"
        },
        "assets":{
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\oe_showcase\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Drupal\\Tests\\oe_showcase\\": "./tests/",
            "Drupal\\Tests\\oe_paragraphs\\": "./build/modules/contrib/oe_paragraphs/tests",
            "Drupal\\Tests\\oe_authentication\\": "./build/modules/contrib/oe_authentication/tests",
            "Drupal\\Tests\\cas_mock_server\\": "./build/modules/contrib/cas_mock_server/tests/src"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true,
        "installer-types": ["npm-asset", "bower-asset"],
        "artifacts": {
            "openeuropa/oe_bootstrap_theme": {
                "dist": {
                    "url": "https://github.com/{name}/releases/download/{pretty-version}/{project-name}-{pretty-version}.tar.gz",
                    "type": "tar"
                }
            }
        },
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/profiles/contrib/{$name}": ["type:drupal-profile"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"],
            "build/libraries/{$name}": [
                "type:drupal-library",
                "vendor:npm-asset",
                "vendor:bower-asset"
            ]
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "./build"
            }
        }
    },
    "config": {
        "sort-packages": true
    }
}
